<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mywatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities$MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities$ChooseFile"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities$SpeedChooser"
            android:label="@string/title_activity_speed_chooser" >
        </activity>
        <activity
            android:name=".Activities$FontChooser"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities$CheatAnimation"
            android:label="@string/title_activity_cheat_animation" >
        </activity>
        <activity
            android:name="activities"
            android:label="@string/title_activity_sound_level_calibration" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>
